<div class="mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3 mb-4">Register</h1>

      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}">
        </div>

        <div class="mb-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}">
        </div>

        <div class="mb-3">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="{{password}}">
        </div>

        <div class="mb-3">
          <label for="conformPassword">Conform Password</label>
          <input type="password" id="conformPassword" name="conformPassword" class="form-control"
            placeholder="Conform Password" value="{{conformPassword}}">
        </div>

        <div class="d-grid gap-3 mt-4">
          <button type="submit" class="btn btn-primary ">Register</button>
        </div>
      </form>

      <p class="lead mt-3">
        Have An Account? <a href="/users/login">Login</a>
      </p>

    </div>
  </div>
</div>