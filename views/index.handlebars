<!-- search bar -->
<div class="container search-bar">
  <form action="/search">
    <div class="row">
      <div class="col-4">
        <div class="search-bar-outer ">
          <div class="search-bar-inner">
            <h4 class="mb-2">尋找餐廳：</h4>
            <div class="input-group">
              <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類"
                aria-label="Restaurant Name..." {{#if keywords}}value="{{{keywords}}}"
                {{/if}}aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-5"></div>
      <div class="col-3">
            <select class="form-control" id="sort" name="sort" onchange="this.form.submit()">
              <option value="asc" {{#if optionSelected.asc }}selected{{/if}}>A > Z</option>
              <option value="desc" {{#if optionSelected.desc }}selected{{/if}}>Z > A</option>
              <option value="category" {{#if optionSelected.category }}selected{{/if}}>類別</option>
              <option value="location" {{#if optionSelected.location }}selected{{/if}}>地區</option>
            </select>
      </div>

    </div>

  </form>

</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#each restaurantsData}}
    <div class="col-4 col-sm-5 col-md-4">
      <a href="/restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
          <div class="card-body p-3">
            <h4 class="card-title mb-2">{{this.name}}</h4>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
          <div class="card-footer d-flex justify-content-end flex-wrap">
            <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
            <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger btn-sm text-white">Delete</button>
            </form>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>